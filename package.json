{
  "name": "shop-scraper",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun run src/api.ts",
    "dev": "bun run src/index.ts",
    "api": "bun run --watch src/api.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run scripts/migrate-postgres.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:stats": "bun run scripts/stats.ts",
    "db:check": "bun run scripts/check-db-stats.ts",
    "search:setup": "bun run scripts/setup-meilisearch.ts",
    "search:index": "bun run scripts/index-products-meili.ts",
    "query:category": "bun run scripts/query-by-category.ts",
    "scrape:billa": "bun run src/index.ts",
    "scrape:foodora": "bun run src/scrape-foodora-to-db.ts",
    "scrape:foodora:store": "bun run src/scrape-foodora-store.ts",
    "scrape:foodora:test": "bun run src/test-foodora-db-integration.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "drizzle-orm": "^0.36.4",
    "elysia": "^1.4.21",
    "meilisearch": "^0.41.0",
    "postgres": "^3.4.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.28.1"
  }
